<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourname.quizapp.ResultsController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <Label fx:id="scoreLabel" text="Score" />
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="resultsContainer" spacing="10">
            <!-- Los resultados se añadirán aquí dinámicamente -->
        </VBox>
    </ScrollPane>
    <Button fx:id="mainMenuButton" text="Volver al Menú Principal" />
</VBox>
